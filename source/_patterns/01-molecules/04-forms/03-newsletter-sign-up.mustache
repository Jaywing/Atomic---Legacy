<form action="#" method="post" id="form-newsletter-signup" class="form-newsletter form-inline form-3-col form-validate" novalidate="novalidate">

    <h2>Newsletter Sign Up</h2>

    <fieldset class="field-wrap">

        <div class="field">
            <label for="first-name">First Name <abbr title="Required">*</abbr></label>
            <input type="text" id="first-name" required aria-required="true" min-length="2" name="firstname" placeholder="Joe">
        </div>

        <div class="field">
            <label for="last-name">Last Name <abbr title="Required">*</abbr></label>
            <input type="text" id="last-name" required aria-required="true" min-length="2" name="lastname" placeholder="Bloggs">
        </div>

        <div class="field">
            <label for="newsletter-email">Email Address <abbr title="Required">*</abbr></label>
            <input type="email" id="newsletter-email" name="newsletteremail" required aria-required="true" placeholder="Eg. myname@mydomain.com">
        </div>
    </fieldset>

    <div class="form-controls">

        <p>By submitting this form you are agreeing to our <a href="#">privacy policy</a></p>

        <button type="submit">Submit</button>

    </div>

</form>